#RBAC permissions
apiVersion: v1
kind: ServiceAccount
metadata:
  name: "{{ arcgis_queue_service_account }}"
  namespace: "{{ arcgis_namespace }}"
  labels:
   arcgis/app: rabbitmq
   arcgis/siteName: "{{ arcgis_sitename }}"
---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "{{ arcgis_queue_role }}"
  namespace: "{{ arcgis_namespace }}"
  labels:
   arcgis/app: rabbitmq
   arcgis/siteName: "{{ arcgis_sitename }}"
rules:
- apiGroups: 
    - ""
  resources: 
    - endpoints
  verbs: 
    - get
    - list
    - watch
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "{{ arcgis_queue_role_binding }}"
  namespace:  "{{ arcgis_namespace }}"
  labels:
   arcgis/app: rabbitmq
   arcgis/siteName: "{{ arcgis_sitename }}"
subjects:
- kind: ServiceAccount
  name: "{{ arcgis_queue_service_account }}"
  namespace:  "{{ arcgis_namespace }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: "{{ arcgis_queue_role }}"
