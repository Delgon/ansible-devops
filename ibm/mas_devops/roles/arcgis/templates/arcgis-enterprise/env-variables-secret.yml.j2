kind: Secret
apiVersion: v1
metadata:
  name: "{{ arcgis_env_variables_secret_name }}"
  namespace: "{{ arcgis_namespace }}"
  labels:
    arcgis/siteName: "{{ arcgis_sitename }}"
    arcgis/tier: config
data:
  env-variables.json: "{{ lookup('template', env_vars_json) | to_json | b64encode }}"
type: Opaque
