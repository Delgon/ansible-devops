#RBAC permissions
kind: ServiceAccount
apiVersion: v1
metadata:
  name: "{{ arcgis_prometheus_service_account }}"
  namespace: "{{ arcgis_namespace }}"
  labels:
    arcgis/app: prometheus
    arcgis/siteName: "{{ arcgis_sitename }}"
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: "{{ arcgis_prometheus_role }}"
  namespace: "{{ arcgis_namespace }}"
  labels:
    arcgis/app: prometheus
    arcgis/siteName: "{{ arcgis_sitename }}"
rules:
  - apiGroups: [""]
    resources:
      - configmaps
      - secrets
      - services
      - endpoints
      - pods
    verbs: ["get", "list", "watch"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: "{{ arcgis_prometheus_role_binding }}"
  namespace: "{{ arcgis_namespace }}"
  labels:
    arcgis/app: prometheus
    arcgis/siteName: "{{ arcgis_sitename }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: "{{ arcgis_prometheus_role }}"
subjects:
  - kind: ServiceAccount
    name: "{{ arcgis_prometheus_service_account }}"
    namespace: "{{ arcgis_namespace }}"
