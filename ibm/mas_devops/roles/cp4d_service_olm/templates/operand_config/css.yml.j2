# Custom Operand Registries
# -----------------------------------------------------------------------------
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandRegistry
metadata:
  name: ibm-cpd-ccs-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  operators:
    - channel: "{{ cpd_components_meta.ccs.sub_channel }}"
      installPlanApproval: Automatic
      name: ibm-cpd-ccs-operator
      namespace: "{{ cpd_operators_namespace }}"
      packageName: ibm-cpd-ccs
      scope: public
      sourceNamespace: openshift-marketplace
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandRegistry
metadata:
  name: ibm-cpd-ws-runtimes-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  operators:
    - channel: "{{ cpd_components_meta.ws_runtimes.sub_channel }}"
      installPlanApproval: Automatic
      name: ibm-cpd-ws-runtimes-operator
      namespace: "{{ cpd_operators_namespace }}"
      packageName: ibm-cpd-ws-runtimes
      scope: public
      sourceNamespace: openshift-marketplace
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandRegistry
metadata:
  name: opencontent-rabbitmq-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  operators:
    - channel: "{{ cpd_service_info.ca.rabbitmq.channel_name }}"
      installPlanApproval: Automatic
      name: rabbitmq-operator
      namespace: "{{ cpd_operators_namespace }}"
      packageName: ibm-rabbitmq-operator
      scope: public
      sourceNamespace: openshift-marketplace
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandRegistry
metadata:
  name: opencontent-elasticsearch-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  operators:
    - channel: "{{ cpd_service_info.ca.elasticsearch.channel_name }}"
      installPlanApproval: Automatic
      name: elasticsearch-operator
      namespace: "{{ cpd_operators_namespace }}"
      packageName: ibm-elasticsearch-operator
      scope: public
      sourceNamespace: openshift-marketplace
# Custom Operand Configs
# -----------------------------------------------------------------------------
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandConfig
metadata:
  name: ibm-cpd-ccs-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  services:
    - name: ibm-cpd-ccs-operator
      spec: {}
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandConfig
metadata:
  name: ibm-cpd-ws-runtimes-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  services:
    - name: ibm-cpd-ws-runtimes-operator
      spec: {}
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandConfig
metadata:
  name: opencontent-rabbitmq-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  services:
    - name: rabbitmq-operator
      spec: {}
---
apiVersion: operator.ibm.com/v1alpha1
kind: OperandConfig
metadata:
  name: opencontent-elasticsearch-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  services:
    - name: elasticsearch-operator
      spec: {}
# Custom Subscriptions
# -----------------------------------------------------------------------------
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: ibm-cpd-ccs-operator
  namespace: "{{ cpd_operators_namespace }}"
spec:
  channel: "{{ cpd_components_meta.ccs.sub_channel }}"
  installPlanApproval: Automatic
  name: ibm-cpd-ccs
  source: ibm-operator-catalog # ibm-cpd-ccs-operator-catalog
  sourceNamespace: openshift-marketplace # "{{ cpd_operators_namespace }}"
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: ibm-cpd-datarefinery-operator
  namespace: "{{ cpd_operators_namespace }}"
spec:
  channel: "{{ cpd_components_meta.datarefinery.sub_channel }}"
  installPlanApproval: Automatic
  name: ibm-cpd-datarefinery
  source: ibm-operator-catalog # ibm-cpd-datarefinery-operator-catalog
  sourceNamespace: openshift-marketplace # "{{ cpd_operators_namespace }}"
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: ibm-elasticsearch-operator-v1.1-ibm-operator-catalog-openshift-marketplace
  namespace: "{{ cpd_operators_namespace }}"
spec:
  channel: "{{ cpd_components_meta.opencontent_elasticsearch.sub_channel }}"
  installPlanApproval: Automatic
  name: ibm-elasticsearch-operator
  source: ibm-operator-catalog # ibm-elasticsearch-catalog
  sourceNamespace: openshift-marketplace # "{{ cpd_operators_namespace }}"
---
