---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: "{{ cpd_admin_login_sa }}"
  namespace: default
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "{{ cpd_admin_login_sa }}-crb"
subjects:
  - kind: ServiceAccount
    name: "{{ cpd_admin_login_sa }}"
    namespace: default
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
