
---
apiVersion: elasticsearch.k8s.elastic.co/v1
kind: Elasticsearch
metadata:
  name: "{{ es_name }}"
  namespace: "{{ es_namespace }}"
spec:
  version: {{ eck_version }}
  nodeSets:
    - name: default
      count: 1
      config:
        # https://www.elastic.co/guide/en/cloud-on-k8s/current/k8s-virtual-memory.html
        node.store.allow_mmap: false
