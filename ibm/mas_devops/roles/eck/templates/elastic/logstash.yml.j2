---
apiVersion: logstash.k8s.elastic.co/v1alpha1
kind: Logstash
metadata:
  name: "{{ logstash_name }}"
  namespace: "{{ logstash_namespace }}"
spec:
  count: {{ logstash_replicas }}

{% if eck_enable_elasticsearch %}
  elasticsearchRefs:
    - clusterName: mas
      name: {{ es_name }}
      namespace:  {{ es_namespace }}
{% endif %}

  version: {{ eck_version }}

  podTemplate:
    spec:
      serviceAccountName: logstash

  pipelines:
    - pipeline.id: main
      config.string: |
        input {
          beats {
            port => 5044
            include_codec_tag => false
          }
        }

        filter {
          # MAS Python Log Format
          # -------------------------------------------------------------------
          if [fields][type] == "python-log" {
            grok {
              match => [
                "message", "%{TIMESTAMP_ISO8601:timestamp}\s+%{DATA:source}\s+%{DATA:level}\s+%{GREEDYDATA:message}",
                "message", "^%{DATA:level}:%{DATA:user}:%{DATA:message}$"
              ]
              overwrite => ["message"]
            }

            date {
              match => [ "timestamp", "YYYY-MM-dd HH:mm:ss,SSS" ]
              remove_field => [ "timestamp" ]
            }
          }

          # Ensure level is always set
          # -------------------------------------------------------------------
          # This can not be enabled yet as some logging is not in the correct format
          # if !([level]) {
          #   mutate {
          #     add_field => { "level" => "UNKNOWN" }
          #   }
          # }
          # mutate {
          #     copy => ["level", "[@metadata][level_lc]"]
          # }
          # mutate {
          #     lowercase => ["[@metadata][level_lc]"]
          # }
        }

        output {
          # For debugging purposes
          # stdout { }

{% if eck_elasticsearch_hosts is defined and eck_elasticsearch_user is defined and eck_elasticsearch_password is defined %}
          elasticsearch {
            hosts => {{ eck_elasticsearch_hosts | to_yaml() }}
            user => {{ eck_elasticsearch_user }}
            password => {{ eck_elasticsearch_password }}
            ssl_enabled => true
            ssl_verification_mode => none
            # This can not be enabled yet as some logging is not in the correct format
            # index => "mas-%{[@metadata][level_lc]}-%{+YYYY.MM.dd}"
            index => "mas-%{+YYYY.MM.dd}"
          }
{% elif eck_enable_elasticsearch %}
          elasticsearch {
            hosts => [ "${MAS_ES_HOSTS}" ]
            user => "${MAS_ES_USER}"
            password => "${MAS_ES_PASSWORD}"
            ssl_certificate_authorities => "${MAS_ES_SSL_CERTIFICATE_AUTHORITY}"
            # This can not be enabled yet as some logging is not in the correct format
            # index => "mas-%{[@metadata][level_lc]}-%{+YYYY.MM.dd}"
            index => "mas-%{+YYYY.MM.dd}"
          }
{% endif %}
        }

  services:
    - name: beats
      service:
        spec:
          type: ClusterIP
          ports:
            - port: 5044
              name: "filebeat"
              protocol: TCP
              targetPort: 5044
